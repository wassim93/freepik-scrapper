{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true, // Change this to false if you want to emit compiled JavaScript
    "strict": true // Optional, but recommended for better type safety
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
